<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{name}</name>
      <config>
        <?if {$USE_CDP}?>
          <cdp xmlns="http://tail-f.com/ned/cisco-ios-xr"/>
        <?end?>
        <interface xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <Loopback>
            <id>0</id>
            <ipv6>
              <address>
                <prefix-list>
                  <prefix>{$LOOPBACK_IP}/128</prefix>
                </prefix-list>
              </address>
            </ipv6>
          </Loopback>
          <Loopback>
            <id>1</id>
            <ipv6>
              <address>
                <prefix-list>
                  <prefix>{$SRV6_PREFIX}:1/128</prefix>
                </prefix-list>
              </address>
            </ipv6>
          </Loopback>
        </interface>
        <router xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <isis>
            <tag>
              <name>1</name>
              <is-type>level-2-only</is-type>
              <net>
                <id>49.0000.0000.{$INDEX_4CHAR}.00</id>
              </net>
              <log>
                <adjacency>
                  <changes/>
                </adjacency>
              </log>
              <address-family>
                <ipv6>
                  <unicast>
                    <metric-style>wide</metric-style>
                    <segment-routing>
                      <srv6>
                        <locator>
                          <name>VPNLAB</name>
                        </locator>
                      </srv6>
                    </segment-routing>
                  </unicast>
                </ipv6>
              </address-family>
              <interface>
                <name>Loopback0</name>
                <interface-type>passive</interface-type>
                <address-family>
                  <ipv6>
                    <unicast/>
                  </ipv6>
                </address-family>
              </interface>
              <interface>
                <name>Loopback1</name>
                <interface-type>passive</interface-type>
                <address-family>
                  <ipv6>
                    <unicast/>
                  </ipv6>
                </address-family>
              </interface>
            </tag>
          </isis>
        </router>
        <segment-routing xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <srv6>
            <encapsulation>
              <source-address>{$SRV6_PREFIX}:1</source-address>
            </encapsulation>
            <locators>
              <locator>
                <name>VPNLAB</name>
                <micro-segment>
                  <behavior>
                    <unode>psp-usd</unode>
                  </behavior>
                </micro-segment>
                <prefix>{$SRV6_PREFIX}:/48</prefix>
              </locator>
            </locators>
          </srv6>
        </segment-routing>
      </config>
    </device>
  </devices>
</config-template>
